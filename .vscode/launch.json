{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Wind Down Scene",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/cli.py",
        "args": ["wind_down_scene"],
        "console": "integratedTerminal",
        "env": {
          "FLASK_APP": "app/main.py",
          "FLASK_ENV": "development",
          "PYTHONPATH": "${workspaceFolder}"  // Ensures app is found
        }
      },
      {
        "name": "Work From Home Scene",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/cli.py",
        "args": ["work_from_home_scene"],
        "console": "integratedTerminal",
        "env": {
          "FLASK_APP": "app/main.py",
          "FLASK_ENV": "development",
          "PYTHONPATH": "${workspaceFolder}"  // Ensures app is found
        }
      }
    ]
  }
  